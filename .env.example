# Database
DATABASE_URL=postgresql://user:password@localhost:5432/flipops
REDIS_URL=redis://localhost:6379

# S3/R2 Storage
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=flipops-assets
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk URLs (already configured in the app)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# Your app URL (update with your actual domain)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Email (SendGrid)
SENDGRID_API_KEY=SG.your_api_key
SENDGRID_FROM_EMAIL=notifications@flipops.io
SENDGRID_FROM_NAME=FlipOps

# SMS (Twilio)
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AI/LLM
OPENAI_API_KEY=sk_your_openai_key
ANTHROPIC_API_KEY=sk_your_anthropic_key

# CRM Integration
NEXT_PUBLIC_CRM_WEBHOOK_URL=https://your-crm-endpoint.com/webhook
RESEND_API_KEY=re_your_api_key

# n8n Webhook Configuration
N8N_API_KEY=your_n8n_api_key_here
N8N_WEBHOOK_SECRET=your_webhook_signature_secret_here
NOTIFICATION_EMAIL=hello@flipops.io

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment
NODE_ENV=development

# Feature Flags
ENABLE_AI_ESTIMATOR=true
ENABLE_PDF_GENERATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true